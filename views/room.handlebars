{{#each rooms}}
  <p><strong>Room #{{this.id}}</strong></p>

  {{#unless this.available}}
    {{#if this.checkin}}
      <p><strong>Status:</strong> <span class="occupied">Occupied</span></p>
    {{/if}}
    {{#unless this.checkin}}
      <p><strong>Status:</strong> <span class="reserved">Reserved</span></p>
    {{/unless}}
    <h3>Current Guest Information:</h3>
    <p><strong>First Name:</strong> {{this.Guest.first_name}} <strong>Last Name:</strong> {{this.Guest.last_name}}</p>
    <p><strong>Phone:</strong> {{this.Guest.phone}} <strong>Email:</strong> {{this.Guest.email}}</p>
    {{#if this.checkin}}
      <form action="/room/checkout/?_method=DELETE" method="POST">
        <button class="btn btn-secondary" type="submit">Check Out</button>
      </form>
    {{/if}}
    {{#unless this.checkin}}
      <form action="/room/checkin/{{this.id}}/?_method=PUT" method="POST">
        <button class="btn btn-secondary" type="submit">Check In</button>
      </form>
    {{/unless}}
  {{/unless}}

  {{#if this.available}}
    <p><strong>Status:</strong> <span class="available">Available</span></p>
    <a href="/room/book/id/{{this.id}}"><button class="btn btn-secondary">Book This Room</button></a>
  {{/if}}
{{/each}}
<br>
<a href="/admin/rooms"><button class="btn btn-secondary">Go Back</button></a>
