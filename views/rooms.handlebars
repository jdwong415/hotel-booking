<h1>All Rooms</h1>

<ul class="list-unstyled">
  {{#each rooms}}
  	<li>
  		<p>Room: {{this.id}}</p>
    	<p>Available: {{this.available}}</p>

		{{!-- Form should send a delete command to the server --}}
		<form>
		<input type="hidden" name="id" value="{{this.id}}">
		<button type="submit">Delete this room</button>
		</form>

      <a href="/{{this.id}}">Update this room</a>
  	</li>
  {{/each}}
</ul>