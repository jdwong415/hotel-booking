<h1>Book a Room</h1>

<form class="form-inline">

  <label class="mr-sm-2" for="inlineFormCustomSelect">Room Number</label>
  <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
    <option selected>Choose...</option>
    {{#each rooms}}
      {{#if this.available}}
        <option value="{{this.id}}">{{this.id}}</option>
      {{/if}}
    {{/each}}
  </select>
  <label class="sr-only" for="firstName"></label>
  <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="firstName" name="firstName" placeholder="First Name">

  <label class="sr-only" for="lastName"></label>
  <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="lastName" name="lastName" placeholder="Last Name">

  <label class="sr-only" for="phoneNum"></label>
  <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="phoneNum" name="phoneNum" placeholder="Phone Number">

  <label class="sr-only" for="inlineFormInput"></label>
  <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="email" placeholder="Email">

  <form action="/?_method=PUT" method="POST">
    <button type="submit" id="book-room">Book</button>
  </form>

  <button type="submit" id="book-room">Book</button>
</form>

<div>
    <form action="/" method="GET">
      <button type="submit" id="go-back">Back to Home</button>
    </form>
</div>