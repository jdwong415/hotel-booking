<div class="container">

    <div class="jumbotron" style="margin-right: 25px; margin-top: 25px;">
      <h1 class="text-center"><img style="height: 120px" src="assets/img/og-favicon.png"> Chez Jerome</h1><br>
      <h2 class="text-center">Bienvenue, et bon apetit!</h2>
      <hr>
      <h2 class="text-center">We have limited tables! Please make your reservation well in advance.</h2>
      <br>

      <div class="text-center">
        <a href="/tables"><button type="button" class="btn btn-med btn-secondary btn-lg"><span class="glyphicon glyphicon-list-alt"></span> View Tables</button></a>
        <a href="/tables/"><button type="button" class="btn btn-med btn-secondary btn-lg"><span class="glyphicon glyphicon-credit-card"></span> Make Reservation</button></a>
      </div>
    </div>


    {{!--adding a reservation --}}
    <div class="col-md-8 col-md-offset-2">
      <form class="create-update-form" action="/tables" method="POST">

      {{!-- section to add tables --}}
      <div class="form-group col-xs-4">
        <label for="res-name">Name</label>
        <input type="text" class="form-control" id="res-name" name="name">
      </div>

      <div class="form-group col-xs-4">
        <label for="res-phone">Phone Number</label>
        <input type="text" class="form-control" id="res-phone" name="phone">
      </div>

      <div class="form-group col-xs-4">
        <label for="email">Email</label>
        <input type="text" class="form-control" id="res-email" name="email" placeholder="john.doe@mac.com">
      </div>

      <div class="form-group col-xs-4">
        <label for="res-time">Reservation Time</label>
        <input type="text" class="form-control" id="res-time" name="res_time">
      </div>

      <div class="form-group col-xs-4">
        <label for="res-number">Number in Party</label>
        <input type="text" class="form-control" id="res-number" name="num_party">
      </div>

      <button type="submit" class="btn btn-big btn-secondary btn-lg">Submit</button>
      </form> <br>
    </div>

    <div class="col-md-8 col-md-offset-2">
    <div class="panel-panel default">
        <ul class="list-group">
        {{#each tables}}
          {{#if this.available}}
          <li class="list-group-item">
            <div class="input-group">
              <p class="lead">Your Reservation has been confirmed. <br>
              Your table # is {{this.id}} <br>
              Name: {{this.name}} <br>
              Number in Party: {{this.num_party}} <br>
              Reservation Time: {{this.res_time}}</p>
              <form action="/tables/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-big btn-secondary btn-lg" id="trash">Cancel Resv<span class="  glyphicon glyphicon-trash"></span></button>
            </form>
            </div>
          </li>
          {{/if}}
        {{/each}}
        </ul>
    </div>
    </div>

    <div class="row">
        <div class="col-md-12">
        {{#each tables}}
            {{#if this.available}}
              <div class="room-reserved">{{this.id}}</div>
            {{/if}} 
        {{/each}}
        </div>
      </div>
      <div class="row div-legend">
        <div class="col-md-12">
          <div class="sm-room-available"></div>
          <p>Available</p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="sm-room-reserved"></div>
          <p>Reserved</p>
        </div>
      </div>
    </div>

    <footer class="footer"></footer>

  </div>

