<div class="container">

    <div class="jumbotron">
      <h1 class="text-center"><span class="glyphicon glyphicon-grain"></span> Chez Jerome</h1>
      <hr>
      <h2 class="text-center">We have limited tables! Book your seat before they all are gone!</h2>
      <br>

      <div class="text-center">
        <a href="/tables"><button type="button" class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-list-alt"></span> View Tables</button></a>
        <a href="/tables/"><button type="button" class="btn btn-lg btn-danger"><span class="glyphicon glyphicon-credit-card"></span> Make Reservation</button></a>
      </div>
    </div>


    {{!--adding a reservation --}}
    <div class="col-md-8 col-md-offset-2">
      <form class="create-update-form" action="/tables" method="POST">

      {{!-- section to add tables --}}
      <div class="form-group">
        <label for="res-name">Name</label>
        <input type="text" class="form-control" id="res-name" name="name">
      </div>

      <div class="form-group">
        <label for="res-phone">Phone Number</label>
        <input type="text" class="form-control" id="res-phone" name="phone">
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" id="res-email" name="email">
      </div>

      <div class="form-group">
        <label for="res-time">Reservation Time</label>
        <input type="text" class="form-control" id="res-time" name="res_time">
      </div>

      <div class="form-group">
        <label for="res-number">Number in Party</label>
        <input type="text" class="form-control" id="res-number" name="num_party">
      </div>

      <button type="submit" class="btn btn-primary submit">Submit</button>
      </form> <br>
    </div>

    <div class="col-md-8 col-md-offset-2">
    <div class="panel-panel default">
        <ul class="list-group">
        {{#each tables}}
          <li class="list-group-item">
            <div class="input-group">
              <p class="lead">Your Reservation has been confirmed. <br>
              Your table # is {{this.id}} <br>
              Name: {{this.name}} <br>
              Number in Party: {{this.num_party}} <br>
              Reservation Time: {{this.res_time}}</p>
              <form action="/tables/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger btn-md" id="trash">Cancel Resv<span class="  glyphicon glyphicon-trash"></span></button>
            </form>
            </div>
          </li>
        {{/each}}
        </ul>
    </div>
    </div>

    <footer class="footer"></footer>

  </div>

