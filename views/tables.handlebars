<div class="container">

    <div class="jumbotron">
      <h1 class="text-center"><span class="glyphicon glyphicon-grain"></span> Chez Jerome</h1>
      <hr>
      <h2 class="text-center">We have limited tables! Book your seat before they all are gone!</h2>
      <br>

      <div class="text-center">
        <a href="/tables"><button type="button" class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-list-alt"></span> View Tables</button></a>
        <a href="/tables/"><button type="button" class="btn btn-lg btn-danger"><span class="glyphicon glyphicon-credit-card"></span> Make Reservation</button></a>
      </div>
    </div>


    {{!--adding a reservation --}}
    <div class="col-md-8 col-md-offset-2">
      <form class="create-update-form" action="/tables" method="POST">

      {{!-- section to add tables --}}
      <div class="form-group">
        <label for="res-name">Name</label>
        <input type="text" class="form-control" id="res-name" name="name">
        <p class="validate" id="name-validate" style="display:none;">Please enter your name.</p>
      </div>

      <div class="form-group">
        <label for="res-phone">Phone Number</label>
        <input type="text" class="form-control" id="res-phone" name="phone">
        <p class="validate" id="phone-validate" style="display:none;">Please enter your phone number.</p>
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" id="res-email" name="email">
        <p class="validate" id="email-validate" style="display:none;">Please enter your email.</p>
      </div>

      <div class="form-group">
        <label for="res-time">Reservation Time</label>
        <input type="text" class="form-control" id="res-time" name="res_time">
        <p class="validate" id="res-time-validate" style="display:none;">Please enter a reservation time. (hhmm)</p>
      </div>

      <div class="form-group">
        <label for="res-number">Number in Party</label>
        <input type="text" class="form-control" id="res-number" name="num_party">
        <p class="validate" id="num-party-validate" style="display:none;">Please enter number in party.</p>
      </div>

      <button type="submit" class="btn btn-primary submit"  onClick="return empty()">Submit</button>
      </form> <br>
    </div>

    <div class="col-md-8 col-md-offset-2">
    <div class="panel-panel default">
        <ul class="list-group">
        {{#each tables}}
          {{#if this.available}}
          <li class="list-group-item">
            <div class="input-group">
              <p class="lead">Your Reservation has been confirmed. <br>
              Your table # is {{this.id}} <br>
              Name: {{this.name}} <br>
              Number in Party: {{this.num_party}} <br>
              Reservation Time: {{this.res_time}}</p>
              <form action="/tables/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger btn-md" id="trash">Cancel Resv<span class="  glyphicon glyphicon-trash"></span></button>
            </form>
            </div>
          </li>
          {{/if}}
        {{/each}}
        </ul>
    </div>
    </div>

    <div class="row">
        <div class="col-md-12">
        {{#each tables}}
            {{#if this.available}}
              <div class="room-reserved">{{this.id}}</div>
            {{/if}} 
        {{/each}}
        </div>
      </div>
      <div class="row div-legend">
        <div class="col-md-12">
          <div class="sm-room-available"></div>
          <p>Available</p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="sm-room-reserved"></div>
          <p>Reserved</p>
        </div>
      </div>
    </div>

    <footer class="footer"></footer>

  </div>

  <script>
  // Prevent empty input
  function empty() {
    var email = $("#res-email").val();
    var phone = $("#res-phone").val();
    var name = $("#res-name").val();
    var number = $("#res-number").val();
    var time = $("#res-time").val();
    var validate = true;

    if (!email) {
      $("#email-validate").show();
      validate = false;
    }
    else if (email) {
      $("#email-validate").hide();
    }
    if (!name) {
      $("#name-validate").show();
      validate = false;
    }
    else if (name) {
      $("#name-validate").hide();
    }
    if (!phone) {
      $("#phone-validate").show();
      validate = false;
    }
    else if (phone) {
      $("#phone-validate").hide();
    }
    if (!time) {
      $("#res-time-validate").show();
      validate = false;
    }
    else if (time) {
      $("#res-time-validate").hide();
    }
    if (!number) {
      $("#num-party-validate").show();
      validate = false;
    }
    else if (number) {
      $("#num-party-validate").hide();
    }
    return validate;
  }
</script>

